@using System

@model Shoes

@{ 
    ViewData["Title"] = "鞋子";

    
}


<div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
    <div class="card" style="width: 18rem;">
        <img src="~/Assets/images/shoes/@Model.MainPhoto" class="card-img-top" alt="@Model.Name">
        <div class="card-body">
            @if(@Model.Description.ToString().Length>=10)
            {
                <p class="card-text text-center">@Model.Description.ToString().Substring(0, 10)</p>
            }
            else
            {
                <p class="card-text text-center">@Model.Description</p>
            }

            <p class="card-text text-center">@Model.Price</p>
        </div>
    </div>
</div>


